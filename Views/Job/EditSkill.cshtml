@model OnlineJobPortal.Models.SearcherSkillsViewModel

@{
    ViewBag.Title = "DisplayProfile";
}



@using (Html.BeginForm("EditSkill", "Job", FormMethod.Post))
{
    @Html.HiddenFor(model => model.AccountId)
    @Html.HiddenFor(model => model.SkillId)
    @Html.AntiForgeryToken()
    <div class="CenterContent">
        <h2 class="heading">Edit Profile</h2>
        <table>
            <col style="width:20%" />
            <col style="width:100%" />
            <tr>
                <td>
                    @Html.LabelFor(model => model.Achievements)
                </td>
                <td>
                    @Html.EditorFor(model => model.Achievements, new { htmlAttributes = new { @class = "textbox" } })
                    @Html.ValidationMessageFor(model => model.Achievements, "", new { @class = "ErrorMessage" })
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Certifications)
                </td>
                <td>
                    @Html.EditorFor(model => model.Certifications, new { htmlAttributes = new { @class = "textbox" } })
                    @Html.ValidationMessageFor(model => model.Certifications, "", new { @class = "ErrorMessage" })
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.SoftwareSkills)
                </td>
                <td>
                    @Html.EditorFor(model => model.SoftwareSkills, new { htmlAttributes = new { @class = "textbox" } })
                    @Html.ValidationMessageFor(model => model.SoftwareSkills, "", new { @class = "ErrorMessage" })
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Sports)
                </td>
                <td>
                    @Html.TextAreaFor(model => model.Sports, new { htmlAttributes = new { @class = "textbox" } })
                    @Html.ValidationMessageFor(model => model.Sports, "", new { @class = "ErrorMessage" })
                </td>
            </tr>
            <tr>

                <td>
                    @Html.LabelFor(model => model.Language)
                </td>
                <td>
                    @Html.EnumDropDownListFor(model => model.Language, "Select Language")
                    @Html.ValidationMessageFor(model => model.Language, "", new { @class = "ErrorMessage" })
                </td>

            </tr>


            <tr>
                <td>
                    <input type="submit" value="Update" class="btn btn-primary" />
                </td>
                <td>
                    @Html.ActionLink("Cancel", "DisplaySkills", "Job", new { @class = "btn btn-primary" })
                </td>

            </tr>
        </table>
    </div>
}


