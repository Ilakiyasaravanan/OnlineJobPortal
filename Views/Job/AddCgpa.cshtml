@model OnlineJobPortal.Models.CgpaViewModel


@{
    ViewBag.Title = "AddCgpa";

}



@using (Html.BeginForm("AddCgpa", "Job", FormMethod.Post))
{
    @Html.AntiForgeryToken()
<div class="CenterContent">

    <h2 class="heading">Add Cgpa</h2>
    <table>
        <tr>
            <td>
                @Html.LabelFor(model => model.CGPA, htmlAttributes: new { @class = "control-label col-md-2" })
            </td>
            <td>
                @Html.EditorFor(model => model.CGPA, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CGPA, "", new { @style = "Color:red" })
            </td>
        </tr>
        <tr>
            <td>
                <input type="Submit" value="AddCgpa" class="button" />
            </td>
        </tr>

    </table>
</div>
        }

