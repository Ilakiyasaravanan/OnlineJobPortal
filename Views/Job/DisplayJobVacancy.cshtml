@model JobPortal.Entity.RecruiterJobDetails

@{
    ViewBag.Title = "DisplayJobVacancy";
}
<div class="CenterContent">
    <h2 class="heading">Already entered vacancy Details, we let u know matched candidates soon</h2>


    <table class="table">       
        @Html.HiddenFor(model => model.AccountId)
        <tr>           
            <th>
                Graduation
            </th>
            <th>
                Job Type
            </th>
            <th>
                Location
            </th>
            <th>
                Salary
            </th>
            <th>
                Work Experience
            </th>
            <th>
                CGPA
            </th>
            <th>
                Action
            </th>

        </tr>
        @foreach (JobPortal.Entity.RecruiterJobDetails item in (List<JobPortal.Entity.RecruiterJobDetails>)ViewData["RecruiterJob"])
        {
    <tr>
       
        <td>
            @item.Graduation
        </td>
        <td>
            @item.Jobtype.JobType
        </td>
        <td>
            @item.Location
        </td>
        <td>
            @item.Salary
        </td>

        <td>
            @item.WorkExperience
        </td>
        <td>
            @item.Cgpa.CGPA
        </td>
        
        <td>
            @Html.ActionLink("Delete", "DeleteVacancy", new { id = item.RecuiterDetailId , Onclick = "return confirm('Do u want to delete')" })
        </td>

    </tr>

        }
        <tr>
            <td>
                @Html.ActionLink("New Vacancy","RecruiterJobDetails","Job")
            </td>
        </tr>
    </table>
</div>


