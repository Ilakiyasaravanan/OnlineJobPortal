@model JobPortal.Entity.Resume

@{
    ViewBag.Title = "Notification";
}
<div class="CenterContent">
    <h2 class="heading">Notification</h2>
    @using (Html.BeginForm("DownloadFile", "Job", FormMethod.Post))
    {
        <input type="hidden" id="hfFileId" name="FileId" />
        <input type="submit" id="btnDownload" value="Download" style="display:none" />
    }
    <table>
        <tr>
            <th style="width:120px">
                Resume
            </th>
            <th style="width:120px">
                Download
            </th>
            <th style="width:120px">
                Message
            </th>

        </tr>
        @foreach (var item in (List<JobPortal.Entity.VacancyMatching>)ViewData["Vacancy"])
        {
            
            <tr>
                <td>@item.Resume.FileName</td>
                <td><a href="javascript:;" onclick="DownloadFile(@item.ResumeId)"><i class="fa fa-download" aria-hidden="true"></i></a></td>
                <td>@Html.ActionLink(" ", "Message_Recruiter", new { id = item.ResumeId },new{@class="fa fa-comment"})</td>
            </tr>
        }
    </table>
    <script type="text/javascript">
        function DownloadFile(fileId) {
            $("#hfFileId").val(fileId);
            $("#btnDownload")[0].click();
        };
    </script>
</div>