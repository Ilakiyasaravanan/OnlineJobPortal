@model OnlineJobPortal.Models.WorkExperienceViewModel

@{
    ViewBag.Title = "WorkExperienceDetails";

}


@using (Html.BeginForm("WorkExperienceDetails", "Job", FormMethod.Post))
{

    @Html.AntiForgeryToken()
<div class="CenterContent">
    <h2 class="heading">Work Experience Details</h2>
    <div class="text-danger"> @ViewBag.Message</div>
   
    <table>
        <tr>
            <td>
                @Html.LabelFor(model => model.WorkCompanyName)
            </td>
            <td>
                @Html.EditorFor(model => model.WorkCompanyName)
                @Html.ValidationMessageFor(model => model.WorkCompanyName, "", new { @class = "ErrorMessage" })
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.CompletedExpereince)
            </td>
            <td>
                @Html.EditorFor(model => model.CompletedExpereince)
                @Html.ValidationMessageFor(model => model.CompletedExpereince, "", new { @class = "ErrorMessage" })
            </td>
        </tr>
        <tr>
            <td>
                <input type="submit" value="Submit" class="btn btn-primary" />
           
                @Html.ActionLink("Cancel", "DisplayWorkExperience","Job", new { @class = "btn btn-primary" })
            </td>
        </tr>
    </table>
</div>
}
