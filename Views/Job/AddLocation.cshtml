@model OnlineJobPortal.Models.LocationViewModel
    
@{
    ViewBag.Title = "AddLocation";

}

<h2 class="heading">AddLocation</h2>


@using (Html.BeginForm("AddLocation", "Job", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <table>
        <tr>
            <td>
                @Html.LabelFor(model => model.Location, htmlAttributes: new { @class = "control-label col-md-2" })
            </td>
            <td>
                @Html.EditorFor(model => model.Location, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Location, "", new { @style = "Color:red" })
            </td>
        </tr>
        <tr>
            <td>
                <input type="Submit" value="AddLocations" class="button" />
            </td>
        </tr>

    </table>
}
