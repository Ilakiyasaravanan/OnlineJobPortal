<div class="container">
    <ul>
        @foreach (var item in Model)
        {
            <li>
                <div class="bottom">
                    @Html.DisplayFor(modelItem => item.Recruiter.FirstName)
                </div>
                <table>
                    <tr>
                        <td>
                            Working In &nbsp;<i class="fa fa-briefcase" aria-hidden="true"></i>&nbsp;&nbsp;
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.WorkingCompany)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Position&nbsp;<i class="fa fa-user" aria-hidden="true"></i>&nbsp;&nbsp;
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Position)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Location&nbsp;<i class="fa fa-map-marker" aria-hidden="true"></i>&nbsp;&nbsp;
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.WorkingLocation)
                        </td>
                    </tr>
                </table>

            </li>
        }
    </ul>
</div>



