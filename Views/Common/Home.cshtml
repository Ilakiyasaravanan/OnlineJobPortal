@model IEnumerable<JobPortal.Entity.RecruiterProfile>

@{
    ViewBag.Title = "Home";

}

<div class="banner text-center">
    @*<h1>
            Future Feature
        </h1>*@
</div>
<div class="search-job text-center">
    <input type="text" class="form-control" placeholder="Search keyword" />
    <input type="text" class="form-control" placeholder="Job Type" />
    <input type="text" class="form-control" placeholder="Location" />
    <input type="button" class="btn btn-primary" value="Find Job" onclick="location.href='@Url.Action("SignUp", "Account")'" />

</div>

<div id="center-alignment">
    <h3>Our Recruiters</h3>
</div>
